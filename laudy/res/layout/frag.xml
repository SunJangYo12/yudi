<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:background="#ffffff"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <ImageView
        android:id="@+id/imgFrag"
        android:layout_gravity="center"
        android:layout_width="220dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/keterangan"
        android:text="Mini samsung j3 analog method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/harga"
        android:text="Rp50.000"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#FF7500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--<RatingBar
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:numStars="5"
        android:stepSize="0.5"
        android:rating="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:id="@+id/koment"
            android:text="0 Komentar"
            android:layout_marginRight="60dp"
            android:textStyle="bold"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/imgFBeli"
            android:src="@drawable/ic_menu_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>